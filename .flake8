[flake8]
max-line-length = 128
exclude = 
    .git,
    __pycache__,
    .venv,
    .pytest_cache,
    .mypy_cache,
    migrations,
    *.egg-info,
    build,
    dist
ignore = 
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401
